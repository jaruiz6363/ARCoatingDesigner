<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ARCoatingDesigner.App.ViewModels"
        x:Class="ARCoatingDesigner.App.Views.GenerateMeritDialog"
        x:DataType="vm:GenerateMeritViewModel"
        Title="Generate Merit Targets"
        Width="350" Height="520"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <StackPanel Margin="16" Spacing="8">
        <TextBlock Text="Generate Merit Targets" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,0,0,8">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Target Type:" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <ComboBox Grid.Row="0" Grid.Column="1" SelectedIndex="{Binding TargetTypeIndex}" Margin="0,0,0,4">
                <ComboBoxItem>Rs</ComboBoxItem>
                <ComboBoxItem>Rp</ComboBoxItem>
                <ComboBoxItem>Rave</ComboBoxItem>
                <ComboBoxItem>Ts</ComboBoxItem>
                <ComboBoxItem>Tp</ComboBoxItem>
                <ComboBoxItem>Tave</ComboBoxItem>
            </ComboBox>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Compare:" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <ComboBox Grid.Row="1" Grid.Column="1" SelectedIndex="{Binding CompareTypeIndex}" Margin="0,0,0,4">
                <ComboBoxItem>Equal (=)</ComboBoxItem>
                <ComboBoxItem>Less or Equal (≤)</ComboBoxItem>
                <ComboBoxItem>Greater or Equal (≥)</ComboBoxItem>
            </ComboBox>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Target Value:" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding TargetValue}" Minimum="0" Maximum="100" Increment="0.5" FormatString="F2" Margin="0,0,0,4"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="λ min (μm):" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="3" Grid.Column="1" Value="{Binding WavelengthMin}" Minimum="0.1" Maximum="20" Increment="0.01" FormatString="F3" Margin="0,0,0,4"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="λ max (μm):" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="4" Grid.Column="1" Value="{Binding WavelengthMax}" Minimum="0.1" Maximum="20" Increment="0.01" FormatString="F3" Margin="0,0,0,4"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="λ step (μm):" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="5" Grid.Column="1" Value="{Binding WavelengthStep}" Minimum="0.001" Maximum="1" Increment="0.001" FormatString="F3" Margin="0,0,0,4"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="AOI min (°):" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="6" Grid.Column="1" Value="{Binding AoiMin}" Minimum="0" Maximum="89" Increment="5" FormatString="F1" Margin="0,0,0,4"/>

            <TextBlock Grid.Row="7" Grid.Column="0" Text="AOI max (°):" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="7" Grid.Column="1" Value="{Binding AoiMax}" Minimum="0" Maximum="89" Increment="5" FormatString="F1" Margin="0,0,0,4"/>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="AOI step (°):" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="8" Grid.Column="1" Value="{Binding AoiStep}" Minimum="1" Maximum="45" Increment="5" FormatString="F1" Margin="0,0,0,4"/>

            <TextBlock Grid.Row="9" Grid.Column="0" Text="Weight:" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <NumericUpDown Grid.Row="9" Grid.Column="1" Value="{Binding Weight}" Minimum="0.01" Maximum="1000" Increment="0.5" FormatString="F2" Margin="0,0,0,4"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Generate" Click="OnGenerateClick" IsDefault="True" Width="80"/>
            <Button Content="Cancel" Click="OnCancelClick" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
